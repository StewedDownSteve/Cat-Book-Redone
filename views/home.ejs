<!DOCTYPE html>
<html>
  <head>
    <title>Cat Gallery</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/styles/main.css" />
  </head>
  <body>
    <%- include('partials/navbar') %>

    <div class="container mt-4">
      <div class="row">
        <% cats.forEach(cat => { %>
          <div class="col-lg-3 col-md-6 col-sm-6 mb-4"> <!-- Bootstrap classes to create four cards per row -->
            <div class="card h-100 shadow-sm rounded"> <!-- Added shadow and border-radius -->
              <img class="card-img-top" src="/images/<%= cat.image %>" alt="Card image cap" style="object-fit: cover; height: 200px;"> <!-- Adjusted image height for consistency -->
              <div class="card-body">
                <h5 class="card-title font-weight-bold text-primary"><%= cat.name %></h5> <!-- Added font-weight and text color -->
                <p class="card-text">
                  <strong>Age:</strong> <%= cat.age %> <br>
                  <strong>Favorite food:</strong> <%= cat.favoriteFood %> <br>
                  <strong>Fun fact:</strong> <%= cat.funFact %>
                </p>
              </div>
              <div class="card-footer d-flex justify-content-between"> <!-- Better button spacing -->
                <a href="/edit/<%= cat._id %>" class="btn btn-outline-primary">Edit</a>
                <form action="/delete/<%= cat._id %>" method="POST" style="display:inline;">
                  <button type="submit" class="btn btn-outline-danger">Delete</button>
                </form>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    </div>
    <%- include('partials/footer') %>


  </body>
</html>